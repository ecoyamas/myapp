<h1>猫の登録画面</h1>

<% if @cat.errors.any? %>
  <div>
    <ul style="color: red">
      <% @cat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @cat, local: true do |form| %>
  <%= form.label '名前' %>
  <%= form.text_field :name %>

  <%= form.label '年齢' %>
  <%= form.select :age, options_for_select((1..25).to_a) %>

  <%= form.submit '登録' %>
<% end %>
